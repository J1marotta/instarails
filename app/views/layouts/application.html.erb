<!DOCTYPE html>
<html>
	<head>
		<title>Jimogram</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<!-- Navigation -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
			<div class="container m-auto">
				<br>
				<!-- Home page link   -->
				<%= link_to "Jimogram", root_url ,class: "navbar-brand" %>
				<% if current_user %>
				<!-- New post   -->
				<%= link_to "New Post", new_photo_path, class: "nav-link" %>
				<% end %>

				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">

							<% if current_user %>
							<!-- Signed in you can see your profile, if not only sign in and register  -->
						<li class="nav-item">
							<!-- Profile page   -->
							<%= link_to "Profile", profile_path, class: "nav-link" %>
						</li>
						<li class="nav-item">
							<!--log out -->
							<%= link_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link" %>
						</li>
					<% else %>
						<li>
							<%= link_to "Login", new_user_session_path, class: "nav-link" %>
						</li>
						<li>
							<%= link_to "Register", new_user_registration_path, class: "nav-link" %>
						</li>
						<% end %>
					</li>
				</li>
			</ul>
		</div>
	</div>
</nav>

<div class="container text-center m-auto">

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
	<%= yield %>
</div>
</body>
</html>
