<h1>Your Profile</h1>

<div class="form-group">
	<p><strong>Username: </strong></p> <%= @profile.username %>
	<p><strong>Name:</strong></p>
	<%= @profile.first_name + ' ' + @profile.last_name %>
</div>

<div class="form-group">
	<p><strong>Bio</strong></p>
	<%= @profile.bio %>
</div>

